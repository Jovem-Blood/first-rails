<!DOCTYPE html>
<html>
  <head>
    <title>Mangrails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap styels -->
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" %>

    <!-- Rails styles -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <main class="container-fluid">
      <%= render 'shared/alerts', alert: notice, style: 'danger' %>
      <%= render 'shared/alerts', alert: alert, style: 'warning' %>
      <%= yield %>
    </main>

    <!-- Bootstrap script tag-->
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" %>
  </body>
</html>
